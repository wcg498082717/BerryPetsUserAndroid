<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/basepadding"
    android:paddingRight="@dimen/basepadding"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="firstpage"/>
    <ImageView
        android:layout_width="@dimen/img_banner_width"
        android:layout_height="@dimen/img_banner_height"
        />
    <android.support.design.widget.TabLayout
            android:id="@+id/frag_mainpage_tblayout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:tabMode="scrollable"
          />
    <android.support.v4.view.ViewPager
        android:id="@+id/frag_mainpage_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>

</LinearLayout>